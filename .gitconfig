[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset %Cblue(%aN)%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	chp = cherry-pick
	st = status
	co = checkout
	merge = merge --no-ff
	pull = pull --no-ff
	ci = commit
	cm = commit
[user]
	name = Holger Just
	email = "hjust@meine-er.de"
[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	ui = auto
[push]
	default = matching
[core]
	autocrlf = false
	editor = mate -wl1
[github]
	user = meineerde
[branch]
	autosetupmerge = true
